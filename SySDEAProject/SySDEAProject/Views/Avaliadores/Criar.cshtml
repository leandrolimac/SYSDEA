<div>
    @Html.ActionLink("Voltar à lista", "Index")
</div>
@section Scripts {
    <script>
        $(document).ready(function ()
        {
            $("#UserPessoa\\.cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#UserPessoa\\.cpf").inputmask({ removeMaskOnSubmit: true });
            $("#UserPessoa\\.tel1").inputmask("mask", { "mask": "(99) 9999-99999" }, { reverse: true });
            $("#UserPessoa\\.tel1").inputmask({ removeMaskOnSubmit: true });
            $("#UserPessoa\\.tel2").inputmask("mask", { "mask": "(99) 9999-99999" }, { reverse: true });
            $("#UserPessoa\\.tel2").inputmask({ removeMaskOnSubmit: true });

        });

