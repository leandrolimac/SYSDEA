@model SySDEAProject.Models.AvaliadorXEntidade

@{
    ViewBag.Title = "Excluir";
}
@Html.Hidden("id",@Model.Avaliador.Id)
@Html.Hidden("id", @Model.idAvaliadorXEntidade)
<input type="hidden" name="idEntidade" id="idEntidade" value=@Model.idEntidade />
<h2>Remover entidade</h2>

<h3>Tem certeja que deseja desassociar avaliador e entidade?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Avaliador.UserPessoa.nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Avaliador.UserPessoa.nome)
        </dd>        

        <dt>
            @Html.DisplayName("Entidade")
        </dt>

        <dd>
            @Model.Entidade.nome
        </dd>

        
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.dataEncerramento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="datefield" data-val="true" data-val-required="Data obrigatória"
                       id="dataEncerramento" data-date-format="dd-MM-yyyy" placeholder="dd-MM-yyyy" name="dataEncerramento" type="date" />
                @Html.ValidationMessageFor(model => model.dataEncerramento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
