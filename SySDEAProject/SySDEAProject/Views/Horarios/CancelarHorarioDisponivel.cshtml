@model SySDEAProject.Models.Horario

@{
    ViewBag.Title = "CancelarHorarioDisponivel";
}

<h2>Cancelar Horario Disponivel</h2>

<h3>Tem certeza que deseja excluir este horário?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Local
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LocalEntidade.titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.data)
        </dt>

        <dd>
           @Model.data.Value.Date.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayName("Hora")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.data.Value.TimeOfDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sala)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sala)
        </dd>

    </dl>

    @using (Html.BeginForm("ConfirmaCancelarHorario","Horarios")) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.idHorario)
            <input type="submit" value="Confirmar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Agendamentos", "Horarios")
        </div>
    }
</div>
