@model IEnumerable<SySDEAProject.Models.Horario>

@{
    ViewBag.Title = "ConsultaHorarios";
}


<h2>Consulta de horários por data</h2>

<table class="table">
    <tr>
        <th> Entidade </th>
        <th>Filial</th>
        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        var color = "#fff";
        if(item.status == 3)
        {
            color = "red";
        }
        if (item.status == 2)
        {
            color = "orange";
        }
        else if (item.status == 1)
        {
            color = "green";
        }

        <tr >
            <td>@item.LocalEntidade.Entidade.nome</td>
            <td>@item.LocalEntidade.titulo</td>

            <td >
                <div >
                @Html.ActionLink(item.hora.ToString(), "DetalheHorario", new { id = item.idHorario }, new { @style = "color:"+color }) 
                 </div>
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Voltar", "BuscaHorario")

