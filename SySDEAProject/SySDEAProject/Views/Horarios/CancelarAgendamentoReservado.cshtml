@model SySDEAProject.Models.Horario

@{
    ViewBag.Title = "Cancelar agendamento reservado";
}

<h2>Cancelar agendamento</h2>

<h3>Tem certeza que deseja cancelar este agendamento?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.Piloto.UserPessoa.nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Piloto.UserPessoa.nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.data)
        </dt>

        <dd>
           @Model.data.Value.Date.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayName("Hora")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.data.Value.TimeOfDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sala)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sala)
        </dd>

    </dl>

    @using (Html.BeginForm("ConfirmaCancelarAgendamento","Horarios")) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.idHorario)
            <input type="submit" value="Confirmar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar ao painel", "PainelEntidade", "Manage")
        </div>
    }
</div>
