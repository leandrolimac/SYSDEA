@model SySDEAProject.Models.SolicitacaoHorario

@{
    ViewBag.Title = "RecusaSolicitacao";
}

<h2>RecusaSolicitacao</h2>

<h3>Tem certeza que deseja recusar esta solicitação?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Piloto.UserPessoa.nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Piloto.UserPessoa.nome)
        </dd>

        <dt>
            @Html.DisplayName("Dia")
        </dt>

        <dd>
            @Model.hora1.Date.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hora1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hora1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hora2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hora2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hora3)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hora3)
        </dd>


    </dl>

    <hr />


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <label>Justificativa: </label>
        <textarea name="justificativa" id="justificativa"></textarea>
        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.idSolicitacao)
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Agendamentos")
        </div>
    }
</div>
