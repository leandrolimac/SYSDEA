@model SySDEAProject.Models.SolicitacaoHorarioViewModel

@{
    ViewBag.Title = "SolicitaHorario";
}

<h2>SolicitaHorario</h2>
<h3 class="text-danger">@ViewBag.StatusMessage</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SolicitacaoHorario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.idLocalEntidade, "idLocalEntidade", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idLocalEntidade", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idLocalEntidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    <input class="datefield" type="date" data-val="true" data-val-required="Dia é obrigatório" id="dia" name="dia" data-date-format="dd-MM-yyyy" placeholder="dd-MM-yyyy" />
                @Html.ValidationMessageFor(model => model.dia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hora1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                    <input type="time" data-val="true" id="hora1" name="hora1"  />                                
                @Html.ValidationMessageFor(model => model.hora1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.hora2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    <input type="time" data-val="true" id="hora2" name="hora2" />                               
                
                @Html.ValidationMessageFor(model => model.hora2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.hora3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             <input type="time" data-val="true" id="hora3" name="hora3" />            
                @Html.ValidationMessageFor(model => model.hora3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.observacoes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.observacoes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observacoes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
